<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/splash_screen"
    tools:context=".Activities.SignUpPage">

    <RelativeLayout
        android:id="@+id/loginPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:id="@+id/signUpStuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/usernameInputS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="11"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwordInputS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernameInputS"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="11"
                android:hint="New Password"
                android:inputType="textPassword"/>

        </LinearLayout>

        <Button
            android:id="@+id/signUpButtonS"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@+id/signUpStuff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:background="@drawable/borders4"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@+id/signUpButtonS"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="GO BACK TO LOGIN"
            android:textColor="@color/black"
            android:background="@drawable/borders4"
            android:layout_gravity="center"/>

    </RelativeLayout>

</RelativeLayout>