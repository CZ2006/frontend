<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.IndividualChatUI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcfc"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="74dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/receiverName"
            android:background="@drawable/borders3"
            android:drawableRight="@drawable/cancel_icon"
            android:paddingRight="29dp"
            android:text="BACK "
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chatView"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/refreshButton"
            android:text="Chatting with ..."
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/backgroundcolor"
            android:scaleType="fitCenter"
            android:src="@drawable/refresh" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/typeMessage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <EditText
            android:id="@+id/typeMessage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="75dp"
            android:ems="10"
            android:focusable="true"
            android:hint="Type message here"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="242dp" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/typeMessage"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/chatView"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/typeMessage"
            android:text="Send" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>